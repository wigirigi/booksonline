{% extends 'AppBundle::layout.html.twig' %}

{% block title %}Contact{% endblock %}
{% block content %}
    <div><br>
        <h1 class="ui header">Contact</h1>
        <h3>Hello, Please use the form below to get in touch with us.</h3>
    </div><br>
    <div style="width: 55%">
        {{ form_start(form, {attr: {'class': 'ui form'}}) }}
            <div class="field">
                {{ form_row(form.name) }}
            </div>
            <div class="field">
                {{ form_row(form.email) }}
            </div>
            <div class="field">
                {{ form_row(form.message) }}
            </div>
            <button class="ui button" type="submit">Submit</button>
        {{ form_end(form) }}
    </div><br>
{% endblock %}